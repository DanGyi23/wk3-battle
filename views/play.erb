<% if @player_1_name != '' || @player_2_name != '' %>
<h1> <%= @player_1_name %> vs. <%= @player_2_name %> </h1>
<% else %>
<h1> You must enter both names! </h1>
<% end %>

<h3> <%= @player_1_name %>: <%= @player_1_hp %>HP </h3>
<h3> <%= @player_2_name %>: <%= @player_2_hp %>HP </h3>

<form action='/attack'>
  <input type='submit' value='Attack'>
</form>